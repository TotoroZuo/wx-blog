.detail-container {
  display: flex;
  width:100%;
  height:100%;
  align-items:center;
  justify-content:center;
}
.float-l{
  float: left;
}
.float-r{
 float: right;
}
.detail-clear{
  clear: both;
}
.detail-container-scroll{
  width: 100%;
  height: 100%;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
  line-height: 1.5;
}
.detail-article-title{
  font-size: 16px;
  margin-bottom: 15px;
}
.detail-article-content{
  padding: 15px 0;
}
.detail-article-likeicon{
  width: 16px;
  height: 16px;
}
.article-label{
  font-size: 12px;
  color: rgba(0, 0, 0, 0.3);
}
.detail-article-author{
  margin-left: 10px;
}
.detail-article-author,
.detail-article-liked {
  color: #2196f3;
}
.detail-article-footer{
  padding-bottom: 15px;
}
@import "../../utils/wxParse/wxParse.wxss";
